<h2><%= t :'.title', name: @user.name %></h2>

<h3><%= t :'.general' %></h3>

<div class="row">
  <div class="col-md-3">
    <h4><%= t :'mongoid.attributes.user.id' %></h4>
    <p><%= @user.id %></p>
  </div>
  <div class="col-md-3">
    <h4><%= t :'mongoid.attributes.user.name' %></h4>
    <p><%= @user.name %></p>
  </div>
  <div class="col-md-3">
    <h4><%= t :'mongoid.attributes.user.email' %></h4>
    <p><%= @user.email.nil? ? empty_char : @user.email %></p>
  </div>
  <div class="col-md-3">
    <h4><%= t :'mongoid.attributes.user.provider' %></h4>
    <p><%= provider_profile_link @user.provider, @user.uid %></p>
  </div>
</div>

<h3><%= t :'mongoid.attributes.user.roles' %></h3>

<p><%= roles_list @user.roles %></p>

<h3><%= t :'.activity' %></h3>

<div class="row">
  <div class="col-md-3">
    <h4><%= t :'mongoid.attributes.user.created_at' %></h4>
    <p><%= l @user.created_at, format: :short %></p>
  </div>
  <div class="col-md-3">
    <h4><%= t :'mongoid.attributes.user.updated_at' %></h4>
    <p><%= l @user.updated_at, format: :short %></p>
  </div>
  <div class="col-md-3">
    <h4><%= t :'mongoid.attributes.user.last_sign_in_at' %></h4>
    <p><%= l @user.last_sign_in_at, format: :short %></p>
  </div>
  <div class="col-md-3">
    <h4><%= t :'mongoid.attributes.user.last_sign_in_ip' %></h4>
    <p><%= link_to @user.last_sign_in_ip, "http://#{@user.last_sign_in_ip}" %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h4><%= t :'mongoid.attributes.user.sign_in_count' %></h4>
    <p><%= @user.sign_in_count %></p>
  </div>
</div>
